{% extends 'admin.html.twig' %}

{% block body %}
    <h1>Users list</h1>

    <table class="table">
        <thead>
        <tr>

            <th>Id</th>
            <th>Username</th>
            <th>Full Name</th>
            <th>E-mail</th>
            <th>Roles</th>
            <th>Cash</th>
            <th>Used Cash</th>
            <th>Register Date</th>
            <th>Banned</th>
            <th>Action</th>

        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <th scope="row">{{ user.id }}</th>
                <td>{{ user.userName }}</td>
                <td>{{ user.fullName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles|join(',') }}</td>
                <td>{{ user.cash }}</td>
                <td>{{ user.usedCash }}</td>
                <td>{{ user.registerDate|date('Y-m-d H:m:s') }}</td>
                <td>{{ user.isBanned }}</td>
                <td><a href="/admin/user/{{ user.id }}/edit">Edit</a> </td>


            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% for ttt in t %}
        {{ ttt.email }}
    {% endfor %}

    {{ i }}
    <ul>
        <li>
            <a href="#">Create a new category</a>
        </li>
    </ul>
{% endblock %}
