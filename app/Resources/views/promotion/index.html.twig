{% extends 'base.html.twig' %}

{% block body %}
    <h1>Promotions list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Isactive</th>
                <th>Percent</th>
                <th>Activefrom</th>
                <th>Activeto</th>
                <th>Madefor</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td><a href="{{ path('promotion_show', { 'id': promotion.id }) }}">{{ promotion.id }}</a></td>
                <td>{{ promotion.type }}</td>
                <td>{{ promotion.isActive }}</td>
                <td>{{ promotion.percent }}</td>
                <td>{% if promotion.activeFrom %}{{ promotion.activeFrom|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if promotion.activeTo %}{{ promotion.activeTo|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ promotion.madeFor }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('promotion_show', { 'id': promotion.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('promotion_edit', { 'id': promotion.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('promotion_new') }}">Create a new promotion</a>
        </li>
    </ul>
{% endblock %}
